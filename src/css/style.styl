/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
	font-family 'Georgia'
	background-color background-color
	color #444
	padding 20px
	margin-left 30px

#camera
	width 800px
	height 600px

li
	padding 6px

.vals li
	float left
	margin-right 10px
	height 30px
	width 125px

.vals li.name 
	width 68px
	
.vals:after
	content ""
	display table
	clear both
	
.current:before
	content 'Current:'
	margin-right 6px
	
.high:before
	content 'High:'
	margin-right 6px
	
.low:before
	content 'Low:'
	margin-right 6px
	
button
	width 80px
	height 22px
	margin-right 6px

.captured
	background-color #b2efba

.uncaptured
	background-color #f0a4a4
	  
#timer
	font-size 90px

#videoElement
	position fixed
	right 0
	bottom 0
	min-width 100%
	min-height 100%
	width auto
	height auto
	z-index -100
	background url(polina.jpg) no-repeat
	background-size cover
